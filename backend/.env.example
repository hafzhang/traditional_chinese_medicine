# Application Configuration
APP_NAME="Constitution Recognition API"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
HOST="0.0.0.0"
PORT=8000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/constitution_db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_DECODE_RESPONSE=true

# Security
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Constitution Scoring
SCORE_CONVERT_FACTOR=2.5
THRESHOLD_PRIMARY=40
THRESHOLD_SECONDARY=30
THRESHOLD_PEACE=60
